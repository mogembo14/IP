scripts.js

// ES6 User class
class User {
    constructor(name, email, password) {
        this.name = name;
        this.email = email;
        this.password = password;
    }
}

// Validator class for form validation
class Validator {
    static isValidName(name) {
        return name.trim().length >= 3; // Name should have at least 3 characters
    }

    static isValidEmail(email) {
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        return emailRegex.test(email); // Email format validation
    }

    static isValidPassword(password) {
        return password.trim().length >= 6; // Password should have at least 6 characters
    }
}

// RegistrationForm class for DOM manipulation and fetch API
class RegistrationForm {
    constructor(formId) {
        this.form = document.getElementById(formId);
        this.nameInput = document.getElementById('name');
        this.emailInput = document.getElementById('email');
        this.passwordInput = document.getElementById('password');
        this.nameError = document.getElementById('nameError');
        this.emailError = document.getElementById('emailError');
        this.passwordError = document.getElementById('passwordError');
    }

    init() {
        this.form.addEventListener('submit', (event) => {
            event.preventDefault(); // Prevent form from submitting immediately
            this.validateForm();
        });
    }

    // Form validation function
    validateForm() {
        const name = this.nameInput.value;
        const email = this.emailInput.value;
        const password = this.passwordInput.value;

        let isValid = true;

        // Validate name
        if (!Validator.isValidName(name)) {
            this.nameError.textContent = 'Name must be at least 3 characters long';
            isValid = false;
        } else {
            this.nameError.textContent = '';
        }

        // Validate email
        if (!Validator.isValidEmail(email)) {
            this.emailError.textContent = 'Please enter a valid email';
            isValid = false;
        } else {
            this.emailError.textContent = '';
        }

        // Validate password
        if (!Validator.isValidPassword(password)) {
            this.passwordError.textContent = 'Password must be at least 6 characters long';
            isValid = false;
        } else {
            this.passwordError.textContent = '';
        }

        if (isValid) {
            const newUser = new User(name, email, password);
            this.submitForm(newUser);
        }
    }

    // Submit form using Fetch API
    async submitForm(user) {
        try {
            const response = await fetch('https://example.com/api/register', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(user),
            });

            if (response.ok) {
                alert('Registration successful!');
                this.clearForm();
            } else {
                alert('Registration failed. Please try again.');
            }
        } catch (error) {
            console.error('Error during registration:', error);
            alert('There was an error with the registration.');
        }
    }

    // Clear form inputs after successful registration
    clearForm() {
        this.nameInput.value = '';
        this.emailInput.value = '';
        this.passwordInput.value = '';
    }
}

// Instantiate and initialize the form
const registrationForm = new RegistrationForm('registrationForm');
registrationForm.init();


