styles.css

/* Global Styles */
body {
    font-family: 'Arial', sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f0f0f0;
    color: #333;
}

/* Header Styling */
header {
    background-color: #4CAF50;
    color: white;
    padding: 20px;
    text-align: center;
    position: relative;
}


/* Navigation Styling */
nav {
    background-color: #333;
    overflow: hidden;
}

nav ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    text-align: center;
}

nav ul li {
    display: inline-block;
}

nav ul li a {
    display: block;
    color: white;
    text-align: center;
    padding: 14px 20px;
    text-decoration: none;
    transition: background-color 0.3s ease;
}

/* Transition: Background color change on hover */
nav ul li a:hover {
    background-color: #111;
}

/* Main Content Styling */
section {
    padding: 20px;
    background-color: white;
}

/* Responsive Design */
@media (max-width: 600px) {
    nav ul li {
        display: block;
    }

   
}

/* Typography */
h1, h2, h3 {
    font-family: 'Open Sans', sans-serif;
    color: #333;
}

/* Table Styling */
.weather-table {
    width: 100%;
    border-collapse: collapse;
}

.weather-table th, .weather-table td {
    border: 1px solid #ddd;
    padding: 8px;
}

/* Selector Example: Change the background color of the first row in the table */
.weather-table tr:nth-child(2) {
    background-color: #f2f2f2;
}

.weather-table th {
    background-color: #4CAF50;
    color: white;
    text-align: left;
}

/* Color Mode - Dark Mode Toggle */
body.dark-mode {
    background-color: #121212;
    color: white;
}

body.dark-mode header, body.dark-mode nav ul li a {
    background-color: #222;
}

/* Transition Effect for Dark Mode */
body.dark-mode {
    transition: background-color 0.5s ease, color 0.5s ease;
}

/* Image Styling and Transition */
.weather-img {
    width: 100%;
    height: auto;
    max-width: 500px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: box-shadow 0.3s ease;
}

/* Hover Effect */
.weather-img:hover {
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
}

/* Animation Example: Bouncing Text */
@keyframes bounce {
    0% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0); }
}

h2 {
    animation: bounce 2s infinite;
}

/* Footer Styling */
footer {
    background-color: #333;
    color: white;
    text-align: center;
    padding: 10px;
    position: relative;
    bottom: 0;
    width: 100%;
}
